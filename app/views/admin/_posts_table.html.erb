<div class="table-responsive">
    <table class="table table-striped table-sm">
          <thead>
            <tr>
              <th>Id</th>
              <th>Title</th>
              <th>Author</th>
              <th>Category</th>
              <th># Comments</th>
              <th> Actions </th>
            </tr>
          </thead>
          <tbody>
            <% @posts.each do |post| %>
                <tr>
                    <td><%= post.id %></td>
                    <td><%= post.title %></td>
                    <td><%= post.user.email %></td>
                    <td><%= post.category.name %></td>
                    <td><%= post.comments.count %></td>
                    <td>
                    <div class="btn-group" role="group">
                    <%= link_to post_path(post), class: "btn btn-primary" do %>
                        <span data-feather="eye"></span>
                    <% end %>
                    <%= link_to edit_post_path(post), class: "btn btn-warning" do %>
                        <span data-feather="edit"></span>
                    <% end %>
                    <%= button_to post_path(post), method: :delete, data: { confirm: "Are you sure?"}, class: "btn btn-danger" do %>
                        <span data-feather="trash-2"></span>
                    <% end %>
                    </div>
                    </td>
                </tr>
            <% end %>
        </tbody>
    </table>
</div>