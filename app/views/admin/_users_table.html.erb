<div class="table-responsive">
    <table class="table table-striped table-sm">
          <thead>
            <tr>
              <th>Id User</th>
              <th>Email</th>
              <th>Role</th>
            </tr>
          </thead>
          <tbody>
            <% @users.each do |user| %>
                <tr>
                    <td><%= user.id %></td>
                    <td><%= user.email %></td>
                    <td><%= user.role %></td>
                </tr>
            <% end %>
        </tbody>
    </table>
</div>