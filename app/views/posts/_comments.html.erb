<div class="p-3 mb-3 bg-light rounded" id="comments">
<h4 class="font-italic">Comments</h4>

    <% @comments.each do |comment| %>
        <p class="mb-0">
        <%= comment.user.email %>
        </br>
        <strong>Comment: </strong>
        <%= comment.comment %> </br>
        </p>
        </br>
        
    <% end %>
</div>

<nav class="blog-pagination">
    <%= will_paginate @comments, params: {anchor: "comments"}, previous_label: '&laquo;', next_label: '&raquo;' %>
</nav>
