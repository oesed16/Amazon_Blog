<body>
    <main role="main">

      <section class="jumbotron text-center">
        <div class="container">
          <h1 class="jumbotron-heading">Welcome to Amazon</h1>
          <p class="lead text-muted">The world best e-shopping commerce ever! </p>
          <p>
            <a href="#" class="btn btn-primary my-2">Main call to action</a>
            <a href="#" class="btn btn-secondary my-2">Secondary action</a>
          </p>
        </div>
      </section>

      <%= render "layouts/alerts" %>

      <div class="album py-5 bg-light">
        <div class="container">

          <div class="row">

          <% @products.each do |product| %>
            <div class="col-md-4">
              <div class="card mb-4 box-shadow">
              <%= link_to product_path(product.id) do %>
                <%= image_tag("cart.svg", clas: "card-img-top")%>
              <% end %>
                <div class="card-body">
                  <p class="card-text"><%= product.name %> <%= number_to_currency(product.price) %> <%= link_to "Detalles", product_path(product.id)%></p>
                </div>
              </div>
            </div>
          <% end %>
          </div>
        </div>
      </div>

    </main>

    <footer class="text-muted">
      <div class="container">
        <p class="float-right">
          <a href="#">Back to top</a>
        </p>
        <p>Album example is &copy; Bootstrap, but please download and customize it for yourself!</p>
        <p>New to Bootstrap? <a href="../../">Visit the homepage</a> or read our <a href="../../getting-started/">getting started guide</a>.</p>
      </div>
    </footer>


  </body>
