<body class="text-center">
  <%= form_for(resource, as: resource_name, url: session_path(resource_name), html: {class: "form-signin"}) do |f| %>
    <%= render "layouts/alerts" %>
    <%= image_tag("bootstrap-solid.jpeg", width: '72', height: '72', class: "mb-4") %>
    <h1 class="h3 mb-3 font-weight-normal">Please sign in</h1>
    <label for="inputEmail" class="sr-only">Email address</label>

    <%= f.email_field :email, id: "inputEmail", class: "form-control", placeholder: "Email address", autofocus: true %>

    <label for="inputPassword" class="sr-only">Password</label>

    <%= f.password_field :password, id: "inputPassword", autocomplete: "current-password", class: "form-control", placeholder: "Password" %>

    <% if devise_mapping.rememberable? -%>
      <div class="checkbox mb-3">
        <%= f.check_box :remember_me, value: "remember-me" %>
        <%= f.label :remember_me %>
      </div>
    <% end -%>

    <%= f.submit "Log in", class: "btn btn-lg btn-primary btn-block" %>

    <%= render "devise/shared/links" %>
    <p class="mt-5 mb-3 text-muted">&copy; 2017-2018</p>
  <% end %>
</body>