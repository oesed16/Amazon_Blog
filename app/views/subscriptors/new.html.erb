<body class="text-center">
<%= form_for @subscriptor do |f| %>
    <% if @subscriptor.errors.any? %>
        <div class="alert alert-danger alert-block alert-fized">
            <p>
            <%= pluralize(@subscriptor.errors.count, "error") %>
            Prevented this subscriptor from saving
            </p>
            <ul>
                <%@subscriptor.errors.full_messages.each do |msg|%>
                    <li> <%= msg %></li>
                <% end %>
            </ul>
        </div>
    <% end %>

    <%= image_tag("bootstrap-solid.jpeg", width: '72', height: '72', class: 'mb-4') %>
    <h1 class="h3 mb-3 font-weight-normal">Subscribe</h1>

        <label for="inputName" class="sr-only">Name</label>
        <%= f.text_field :name, class: "form-control", placeholder: "Your name", autofocus: true %>
        <br>
        <label for="inputEmail" class="sr-only">Email</label>
        <%= f.email_field :email, class: "form-control", placeholder: "Your email" %>
        <br>
    <%= f.submit class: "btn btn-lg btn-primary btn-block" %>
    <br>
    <%= link_to "Back", :back %>
    <p class="mt-5 mb-3 text-muted">&Copy: 2018</p>
<% end %>
</body>